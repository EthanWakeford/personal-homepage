---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero';
import AboutCard from '../components/AboutCard';
import TextImagecard from '../components/TextImageCard';

import { getTestData } from '../firebase';

const myData = await getTestData();

const about = myData[0].about;
const bgImage = myData[0].bgimage;
const headShot = myData[0].headshot;
---

<Layout title='' metaDescription='this is my first astro page'>
  <Hero
    welcomeText='Ethan Wakeford'
    tagline={about}
    backgroundImages={[bgImage]}
    slideTime={5000}
    client:load
  />
  <AboutCard
    aboutTitle='this is where I make a title about some stuff that we do'
    aboutBody='its super cool'
    linkText='Click here to find out'
  />
  <TextImagecard
    title='title'
    bodyText='blah blah'
    imageAltText='cool picture'
    imageLink={headShot}
    link='/'
    linkText='click me'
    reversed={false}
  />
</Layout>
