---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero';
import AboutCard from '../components/AboutCard';
import TextImagecard from '../components/TextImageCard';
import ProjectGallery from '../components/ProjectGallery';
import { myInfo, projects } from '../firebase';

const about = myInfo[0].about;
const bgImage = myInfo[0].bgimage;
const headShot = myInfo[0].headshot;
---

<Layout title='' metaDescription='this is my first astro page'>
  <Hero
    tagline={about}
    backgroundImages={[bgImage]}
    slideTime={5000}
    client:load
  />
  <AboutCard
    aboutTitle='Full Stack Engineer'
    aboutBody='I am a software developer who recently Graduated from Holberton/Atlas Tulsa. I love all things software. I have the most experience in web dev but I am open to anything engineering'
    linkText='My Resume'
  />
  <TextImagecard
    title="I'm looking for a job!"
    bodyText='Feel free to reach out or'
    imageAltText='This is me'
    imageLink={headShot}
    link='https://github.com/EthanWakeford'
    linkText='Look at my Github'
    reversed={false}
  />
  <ProjectGallery
    projects={projects.sort((a, b) => b.priority_weight - a.priority_weight)}
    galleryHeader="Here's what I've done"
    client:idle
  />
</Layout>
